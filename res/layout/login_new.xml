<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dip"
            android:scaleType="center"
            android:scaleY="1.3"
            android:src="@drawable/liv_logo" />

        <TextView
            android:id="@+id/txt_logo_label"
            android:layout_width="280dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dip"
            android:gravity="center_horizontal"
            android:text="Start LIVing"
            android:textColor="#818181"
            android:textSize="23dip"
            android:typeface="sans" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip" >

            <Button
                android:id="@+id/btn_fb"
                style="@style/LivButtonBlue"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="40dp"
                android:paddingRight="-10dp"
                android:text="Login with Facebook"
                android:textSize="23dip" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:scaleX="0.9"
                android:scaleY="1"
                android:src="@drawable/fb_thumb" />
        </FrameLayout>

        <TextView
            android:id="@+id/txt_or"
            android:layout_width="280dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:gravity="center_horizontal"
            android:text="or"
            android:textColor="#818181"
            android:textSize="20dip" />

        <Button
            android:id="@+id/btn_sign"
            style="@style/LivButton"
            android:layout_width="280dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:text="Sign In/Sign Up"
            android:textSize="23dip" />

        <Button
            android:id="@+id/btn_skip"
            style="@style/LivButtonSkip"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dip"
            android:text="Skip"
            android:textSize="15dip" />
    </LinearLayout>

</ScrollView>