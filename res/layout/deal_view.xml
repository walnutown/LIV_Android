<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextureView
            android:id="@+id/video_holder"
            android:layout_width="370dip"
            android:layout_height="370dip"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/video_thumb"
            android:layout_width="370dip"
            android:layout_height="370dip"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/days_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/liv_txt_days_left"
            android:padding="5dp"
            android:text="2 days left"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-1dp"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:paddingLeft="2dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxWidth="300dp"
            android:text="LEON Juice bar"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:maxLength="5"
            android:text="$15"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/new_price"
            android:maxLength="5"
            android:text="$30"
            android:textColor="#C1C1C1"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:paddingLeft="2dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxWidth="300dp"
            android:text="50% off daily cousine"
            android:textColor="#858585"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/boutgh_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="293 bought"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="370dp"
        android:layout_height="10dp"
        android:background="@drawable/liv_bottom_corners" />

    <TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="60dip" />

</merge>