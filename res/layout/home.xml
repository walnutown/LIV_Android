<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/thumb_icon"
            style="@style/LivImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:scaleType="centerInside"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/thumb_icon" />

        <ImageView
            android:id="@+id/liv_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-30dp"
            android:layout_toRightOf="@id/thumb_icon"
            android:scaleType="fitCenter"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:src="@drawable/liv_logo" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C1C1C1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/liv_bottom_corners" >

        <Spinner
            android:id="@+id/spLocation"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="48dp" 
            android:layout_marginBottom="-5dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/deal_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBFAF5"
        android:divider="@null" >
    </ListView>

</LinearLayout>