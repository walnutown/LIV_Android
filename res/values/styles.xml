    </style>
    
     <style name="LivImageButton" parent="android:style/Widget.ImageButton">
        <item name="android:background">@drawable/liv_button_image</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#ffffffff</item>
