<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>
	
    <!-- set ActionBar style with signin button -->
    <style name="LivTheme.ActionBar.SignIn" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/LivActionbar.SignIn</item>
        <item name="android:actionMenuTextColor">#85449a</item>
    </style>
    <style name="LivActionbar.SignIn" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/liv_actionbar</item>
        <item name="android:titleTextStyle">@style/LivActionBarTitle</item>
        <item name="android:displayOptions">showHome|useLogo|showCustom</item>
        <item name="android:customNavigationLayout">@layout/actionbar_signin</item>
        <item name="android:layout_marginLeft">-5dp</item>
        <item name="android:layout_marginRight">-5dp</item>     
    </style>

    <style name="LivActionBarTitle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#85449a</item>
    </style>
    
    
    <!-- set ActionBar style with signup button -->
     <style name="LivTheme.ActionBar.SignUp" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/LivActionbar.SignUp</item>
        <item name="android:actionMenuTextColor">#85449a</item>
    </style>
    <style name="LivActionbar.SignUp" parent="android:style/Widget.ActionBar">
        <item name="android:background">@drawable/liv_actionbar</item>
        <item name="android:titleTextStyle">@style/LivActionBarTitle</item>
        <item name="android:displayOptions">showHome|useLogo|showCustom</item>
        <item name="android:customNavigationLayout">@layout/actionbar_signup</item>
        <item name="android:layout_marginLeft">-5dp</item>
        <item name="android:layout_marginRight">-5dp</item>     
    </style>
    
    <!-- set base ActionBar style -->
     <style name="LivTheme.ActionBar.Base" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/LivActionbar.Base</item>
        <item name="android:actionMenuTextColor">#85449a</item>
    </style>
    <style name="LivActionbar.Base" parent="android:style/Widget.ActionBar">
        <item name="android:background">@drawable/liv_actionbar</item>
        <item name="android:titleTextStyle">@style/LivActionBarTitle</item>
        <item name="android:displayOptions">showHome|useLogo|showCustom</item>
        <item name="android:customNavigationLayout">@layout/actionbar_base</item>
        <item name="android:layout_marginLeft">-5dp</item>
        <item name="android:layout_marginRight">-5dp</item>    
    </style>
    
    
	<!-- set other widget styles -->
    <style name="LivButton" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/liv_button</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="LivButtonGrey" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/liv_button_grey</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textStyle">bold</item>
